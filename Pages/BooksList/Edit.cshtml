@page
@model LMSRazor.Pages.BooksList.EditModel


<br />
<h2 class="text-info">Edit Book</h2>
<br />

<div class="border container" style="padding:30px">
    <form method="post">
        <input type="hidden" asp-for="Books.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Books.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Books.Name" class="form-control" />
            </div>
        </div>
        <span asp-validation-for="Books.Name" class="text-danger"></span>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Books.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Books.Author" class="form-control" />
            </div>
        </div>
        <span asp-validation-for="Books.Author" class="text-danger"></span>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Books.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="Books.ISBN" class="form-control" />
            </div>
        </div>
        <span asp-validation-for="Books.ISBN" class="text-danger"></span>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Books.Image"></label>
            </div>
            <div class="col-6">
                <input asp-for="Books.Image" class="form-control" />
            </div>
        </div>
        <span asp-validation-for="Books.Image" class="text-danger"></span>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Books.Genre"></label>
            </div>
            <div class="col-6">
                <input asp-for="Books.Genre" class="form-control" />
            </div>
        </div>
        <span asp-validation-for="Books.Genre" class="text-danger"></span>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Books.NoofCopies"></label>
            </div>
            <div class="col-6">
                <input asp-for="Books.NoofCopies" class="form-control" />
            </div>
        </div>
        <span asp-validation-for="Books.NoofCopies" class="text-danger"></span>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="BooksList_Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}